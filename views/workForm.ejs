<%- include('includes/header.ejs') %>


    <div class="editor__TopBar">
        <h4>Add Work</h4>
        
    <p>Please do not use speech marks ("" or '') while submitting text.</p>
    </div>

    <div class="form__Container">
        <form action="/workForm" method="post" class="form" enctype="multipart/form-data">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">KR Title</span>
                </div>
                <input type="text" class="form-control" id="titleKR"  aria-label="titleKR" aria-describedby="basic-addon1" name="titleKR" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">KR Description</span>
                </div>
                <input type="text" class="form-control"  id="descriptionKR"  aria-label="descriptionKR" aria-describedby="basic-addon1" name="descriptionKR" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Channels</span>
                </div>
                <input type="text" class="form-control" placeholder="" id="channels"  aria-label="channels" aria-describedby="basic-addon1" name="channels" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Release Date</span>
                </div>
                <input type="text" class="form-control"  id="releaseDate"  aria-label="releaseDate" aria-describedby="basic-addon1" name="releaseDate" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">KR Producer</span>
                </div>
                <input type="text" class="form-control" " id="producerKR"  aria-label="producerKR" aria-describedby="basic-addon1" name="producerKR" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">KR Writer </span>
                </div>
                <input type="text" class="form-control" id="writerKR"  aria-label="writerKR" aria-describedby="basic-addon1" name="writerKR" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">KR Starring</span>
                </div>
                <input type="text" class="form-control" id="starringKR"  aria-label="starringKR" aria-describedby="basic-addon1" name="starringKR" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">ENG Title</span>
                </div>
                <input type="text" class="form-control" id="titleENG"  aria-label="titleENG" aria-describedby="basic-addon1" name="titleENG" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">ENG Description</span>
                </div>
                <input type="text" class="form-control"  id="descriptionENG"  aria-label="descriptionENG" aria-describedby="basic-addon1" name="descriptionENG" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">ENG Producer</span>
                </div>
                <input type="text" class="form-control" id="producerENG"  aria-label="producerENG" aria-describedby="basic-addon1" name="producerENG" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">ENG Writer</span>
                </div>
                <input type="text" class="form-control" id="writerENG"  aria-label="writerENG" aria-describedby="basic-addon1" name="writerENG" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">ENG Starring</span>
                </div>
                <input type="text" class="form-control" id="starringENG"  aria-label="starringENG" aria-describedby="basic-addon1" name="starringENG" >
            </div>


            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Main Video Link</span>
                </div>
                <input type="text" class="form-control"  id="fullVid"  aria-label="fullVid" aria-describedby="basic-addon1" name="fullVid" >
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Carousel Video Link (Optional)</span>
                </div>
                <input type="text" class="form-control" id="clipVid"  aria-label="clipVid" aria-describedby="basic-addon1" name="clipVid" >
            </div>



            <div class="mb-3 mt-3">
                <label for="formFile" class="form-label">Tall Image File</label>
                <input class="form-control" type="file" id="formFile" name="imageTall" required>
            <div>   

                
            <div class="mb-3 mt-3">
                <label for="formFile" class="form-label">Wide Image File</label>
                <input class="form-control" type="file" id="formFile" name="image" required>
            </div>

            <div class="input-group mb-3">


                <div class="form-check ml-3" style="align-self:center">
                    <input class="form-check-input" type="checkbox" value="1" id="flexCheckChecked" name="inProduction">
                    <label class="form-check-label" for="inProduction">
                        In Production
                    </label>
                </div>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">In Production KR Sub Title </span>
                </div>
                <input type="text" class="form-control"  id="subTitleKR"  aria-label="subTitleKR" aria-describedby="basic-addon1" name="subTitleKR">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">In Production ENG Sub Title</span>
                </div>
                <input type="text" class="form-control"  id="subTitleENG"  aria-label="subTitleENG" aria-describedby="basic-addon1" name="subTitleENG">
            </div>

            <div class="mb-3">            
                <label for="color" class="form-label">In Production Font Color</label>
                <input type="color" name="color" class="form-control form-control-color" id="exampleColorInput"  title="Font color">
            </div>
            <div>
                <label for="backgroundColor" class="form-label">In Production Background Color</label>
                <input type="color" name="backgroundColor" class="form-control form-control-color" id="exampleColorInput"  title="Background color">
            </div>
            <div>  
                <div class="center">
                    <button type="submit" class="btn btn-success">Submit</button>
                    <a class="btn btn-danger" href="/work">Cancel</a>
                </div>
            </div>
        </form>
    </div>



<%- include('includes/end.ejs') %>
