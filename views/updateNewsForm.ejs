<%- include('includes/header.ejs') %>

<div class="editor__TopBar">
  <h4>Edit News</h4>
  <%- include('includes/tip.ejs') %>
</div>
 
<div class="form__Container"> 
  <form action="/update_imtv/postUpdateNewsForm" method="post" class="form__News" enctype="multipart/form-data">
    <div class="mb-3 mt-3">
      <p>Wide Image</p>
      <img class="workImageWide" src="<%= object.imageLarge %>" alt="<%= object.titleKR %>">
      <p class="m-1">Current URL: <%= object.imageLarge %> </p>
    </div>
    <div class="mb-3 mt-3">
      <label for="formFile" class="form-label">Upload New Wide Image File</label>
      <input class="form-control" type="file" id="formFile" name="imageLarge">
      <input type="hidden" name="oldImageLarge" value="<%= object.imageLarge %>">
  <div>    

    <div class="mb-3 mt-3">
      <p>Small Image (optional)</p>
      <img class="workImageWide" src="<%= object.image ? object.image : '' %>" >
      <p class="m-1">Current URL: <%= object.image %> </p>
      <div class="mb-3 mt-3">
        <label for="formFile" class="form-label">Upload New Small Image</label>
        <input class="form-control" type="file" id="formFile" name="image">
        <input type="hidden" name="oldImage" value="<%= object.image ? object.image : '' %>">
    <div>   
  </div> 
  <br />
  <div class="center__Column">
    <h4>Title</h4>
  </div>

    <div class="input-group mt-3 mb-3">
      
      <input
        type="text"
        class="form-control"
        id="titleKR"
        aria-label="titleKR"
        aria-describedby="basic-addon1"
        name="titleKR"
        value = "<%= object.titleKR %>"
      />
    </div>

    <div class="input-group mb-3">
      <input
        type="text"
        class="form-control"
        placeholder="제목을 입력"
        id="titleENG"
        aria-label="titleENG"
        aria-describedby="basic-addon1"
        name="titleENG"
        value = "<%= object.titleENG %>"
      />
    </div>
    <br />
    <div class="center__Column mb-2 mt-3">
      <h4>KR Blog</h4>
    </div>

    <div class="mb-3">
      <textarea
        name="1"
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="3"
      ><%= object.bodyKR1 %></textarea>
    </div>

    <div class="mb-3">
      <textarea
        name="2"
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="3"
      ><%= object.bodyKR2 %></textarea>
    </div>

    <div class="mb-3">
      <textarea
        name="3"
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="3"
      ><%= object.bodyKR3 %></textarea>
    </div>

    <div class="mb-3">
      <textarea
        name="4"
